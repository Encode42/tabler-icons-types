{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2021",
        "lib": ["ES2021"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowJs": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "listFiles": true,
        "resolveJsonModule": true
    },
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "public/docs",
        "githubPages": true,
        "validation": {
            "invalidLink": true
        },
        "readme": "none",
        "name": "NBS.js",
        "includeVersion": true,
        "sort": ["static-first", "visibility"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "build",
        "dist"
    ]
}
